<!DOCTYPE html>
<html lang="en">

<body>
    <div class="container">

        <div class="row6">
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/franchises" class="list-group-item disabled"><%= image_tag("hello.png") %></a>
                    <a href="/users/edit" class="list-group-item"><%= image_tag("sideEditProfile.png") %></a>
                </div>
            </div>
            <div class="col-md-9">
                <h2>Franchise Orders</h2>            
          <table class="table">
            <thead>
              <tr>
                <th>Kids Id</th>
                <th>Parents Id</th>
                <th>Day</th>
                <th>Order Id</th>
                <th>Meal Id</th>
                <th>Premium</th>
                <th>Edit</th>
                <th>Delete</th>
              </tr>
            </thead>
            <tbody>
             <% @orders.each do |order| %>
             <% @meals.each do |meal| %>
              <tr>
                <%if meal.fid == current_user.fid && order.mealID == meal.mealID%>
                <td><%= order.kidsID%></td>
                <td><%= order.user_id %></td>
                <td><%= order.day %></td>
                <td><%= order.id %></td>
                <td><%= order.mealID %></td>
                <td><%= order.premium %></td>
                <td><a class="btn btn-sm btn-default btn-block"<%= link_to 'Edit', edit_order_path(order) %></a></td>
                <td><a class="btn btn-sm btn-default btn-block"<%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></a></td>
              </tr>
              <%end%>
              <%end%>
            <% end %>
            </tbody>
          </table>
        
        

            </div>
        </div>

        <hr>

        <footer>

            <div class="row">
                <div class="col-lg-12">
                </div>
            </div>
        </footer>

    </div>
</body>

</html>


