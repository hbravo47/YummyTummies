<p id="notice"><%= notice %></p>

<h1>Check Out Our Meals</h1>

<table>
  <thead>
    <tr>
      <th>Names&nbsp;</th>
      <th>Calories&nbsp;</th>
      <th>Premium&nbsp;</th>
      <th>Pic&nbsp;</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.name %></td>
        <td><%= meal.calories %></td>
        <td><%= meal.premium %></td>
        <td><%= image_tag(meal.pic) %></td>
        <td><%= meal.mealID %></td>
        <td><%= link_to 'Show', meal %></td>
          <td><%= check_box_tag 'Show'%></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
     
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_meal_path %>
